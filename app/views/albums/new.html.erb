<h1>Albums new</h1>
<form class="" action=" <%=albums_url%>" method="post">
  <%= auth %>
  <!-- Drop down to select corresponding band for album -->
  <input type="text" name="album[name]" placeholder="enter album name">
  <br>
  <select class="" name="album[band_id]">
    <% @bands.each do |band| %>
      <option value="<%= band.id %>"><%=band.name%></option>
    <% end %>
  </select>

  <br>
  <br>

  <input type="radio" name="album[location]" value="studio" checked> Studio<br>
  <input type="radio" name="album[location]" value="live"> Live<br>

  <input type="submit">
</form>
